
NAME="Awesome WM"
DESC="Install Awesome Windows Manager"
COMMAND="
apt install -y awesome awesome-extra terminator nemo
cd /tmp
git clone --recursive https://github.com/lcpz/awesome-copycats.git
mkdir -p ~/.config/awesome
mv -bv awesome-copycats/* ~/.config/awesome && rm -rf awesome-copycats
cd -
cp ~/.config/awesome/rc.lua.template ~/.config/awesome/rc.lua
sed -i -e 's,^local terminal     = .*,local terminal     = \"terminator\",' ~/.config/awesome
sed -i -e 's,^local terminal     = .*,&\nlocal filemanager     = \"nemo\",' ~/.config/awesome
"
